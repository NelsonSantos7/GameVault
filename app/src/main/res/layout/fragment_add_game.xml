<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/editTextGameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título do jogo"
            android:inputType="textCapSentences" />

        <EditText
            android:id="@+id/editTextGameDistributor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Distribuidora"
            android:inputType="textCapSentences" />

        <EditText
            android:id="@+id/editTextGameYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ano de lançamento"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextGameDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duração (horas)"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextGameDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textViewSelectedPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Plataformas selecionadas"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Spinner
            android:id="@+id/spinnerGameStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageViewGameCover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/buttonAddPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar foto" />

        <Button
            android:id="@+id/buttonSubmitGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar jogo" />

        <Button
            android:id="@+id/buttonSelectPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecionar plataformas" />
    </LinearLayout>
</ScrollView>
